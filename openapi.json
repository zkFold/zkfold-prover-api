{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "ZkFold Prover API",
      "description": "This is the API for ZkFold's prover backend"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/octet-stream"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/prove": {
        "post": {
          "summary": "Prove API",
          "description": "Endpoint for creating a zero-knowledge proof",
          "parameters": [
            {
              "in": "body",
              "name": "setup",
              "description": "Setup data in byte string",
              "required": true,
              "schema": {
                "type": "string",
                "format": "byte"
              }
            },
            {
              "in": "body",
              "name": "witness",
              "description": "Witness data in byte string",
              "required": true,
              "schema": {
                "type": "string",
                "format": "byte"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Proof created successfully",
              "schema": {
                "$ref": "#/definitions/ProveAPIResult"
              }
            },
            "400": {
              "description": "Invalid input"
            }
          }
        }
      }
    },
    "definitions": {
      "ProveAPIResult": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "data": {
            "type": "string",
            "format": "byte"
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "status"
        ],
        "example": {
          "status": "success",
          "data": "base64encodedbytestring"
        }
      }
    }
  }
  